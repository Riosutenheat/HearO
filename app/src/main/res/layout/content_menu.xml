<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:screenOrientation="portrait"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginTop="55dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_alignParentTop="true">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화재"

            />
        <Button
            android:id="@+id/start2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노크"
            />

        <Button
            android:id="@+id/start3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음성" />
        <Button
            android:id="@+id/start4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초인종" />
    </LinearLayout>


    <ToggleButton
        android:id="@+id/HearMainbutton"
        android:layout_width="143dp"
        android:layout_height="154dp"
        android:gravity="center"
        android:background="@drawable/hearobutton"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/but"
        android:layout_centerHorizontal="true"
        android:textOn=""
        android:textOff="" />
    <Button
        android:id="@+id/blinking_animation"
        android:visibility="invisible"
        android:background="@drawable/hearofire"
        android:layout_width="143dp"
        android:layout_height="154dp"

        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/but"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/blinking_animation2"
        android:layout_width="143dp"
        android:layout_height="154dp"
        android:background="@drawable/hearodoor"

        android:visibility="gone"
        android:layout_below="@+id/but"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"  />
    <Button
        android:id="@+id/blinking_animation3"
        android:layout_width="143dp"
        android:layout_height="154dp"
        android:background="@drawable/hearovoice"

        android:visibility="gone"
        android:layout_below="@+id/but"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"  />

    <Button
        android:id="@+id/blinking_animation4"
        android:layout_width="143dp"
        android:layout_height="154dp"
        android:background="@drawable/hearobuttonbell"

        android:visibility="gone"
        android:layout_below="@+id/but"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"  />

    <TextView
        android:id="@+id/firetext"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/frame"
        android:gravity="center"
        android:text="불이 났나봐요!"
        android:textSize="15sp"
        android:visibility="invisible"
        android:layout_below="@+id/HearMainbutton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/doortext"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/frame"
        android:text="누군가가 노크를 했어요!"
        android:textSize="15sp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@+id/blinking_animation"
        android:layout_alignBaseline="@+id/firetext"
        android:layout_alignBottom="@+id/firetext"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/voice"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/frame"
        android:text="지금 뭐해, 당장 나와!"
        android:textSize="15sp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@+id/blinking_animation"
        android:layout_alignBaseline="@+id/firetext"
        android:layout_alignBottom="@+id/firetext"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/bell"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="초인종이 울렸어요!"
        android:background="@drawable/frame"
        android:textSize="15sp"
        android:visibility="gone"
        android:layout_below="@+id/blinking_animation"
        android:layout_alignBaseline="@+id/firetext"
        android:layout_alignBottom="@+id/firetext"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:id="@+id/imgbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:layout_alignParentBottom="true"
        >


        <Button
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/click" />

        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/click2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/click3"/>
    </LinearLayout>

</RelativeLayout>
